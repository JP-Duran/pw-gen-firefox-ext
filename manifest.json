    "permissions": ["storage", "tabs"],

    "applications": {
        "gecko": {
            "strict_min_version": "54.0a1",
            "id": "ce5b23626517576a1c69ee77cd8f57ec41e1a4b9@temporary-addon"
        }
    }
}